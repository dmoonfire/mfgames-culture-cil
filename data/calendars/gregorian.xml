<calendar
	xmlns="urn:mfgames.com:mfgames-culture:0"
	xml:id="gregorian"
	version="0">
	<cycles>
		<!--
			The Gregorian calendar is based on the year, which is continually
			increasing.
		-->
		<cycle xml:id="Year">
			<lengths>
				<!--
					The smallest number of years that has a consistent length is
					400 years which is 146,097. This handles all of the leap
					year logic and defines the point it repeats. While we don't
					have to have this entry, it significantly speeds up
					calculations.
				-->
				<length>
					<count>400</count>
					<julian>146097</julian>
				</length>
				<length>
					<!-- <count/> is implied to be 1 -->
					<julian ref="Year" mod="400">366</julian>
					<julian ref="Year" mod="100">365</julian>
					<julian ref="Year" mod="4">366</julian>
					<julian>365</julian>
				</length>
			</lengths>

			<julian-offset>-1721059.5</julian-offset>

			<cycles>
				<cycle xml:id="Decade">
					<calculate ref="Year" div="10"/>

					<cycles>
						<cycle xml:id="Decade Year">
							<calculate ref="Year" mod="10"/>
						</cycle>
						<cycle xml:id="Century Decade">
							<calculate ref="Decade" mod="10"/>
						</cycle>
					</cycles>
				</cycle>
				<cycle xml:id="Century">
					<calculate ref="Year" div="100"/>

					<cycles>
						<cycle xml:id="Millennium Century">
							<calculate ref="Century" mod="10"/>
						</cycle>
					</cycles>
				</cycle>
				<cycle xml:id="Millennium">
					<calculate ref="Year" div="1000"/>
				</cycle>
				<cycle xml:id="Year Day">
					<lengths>
						<length>
							<julian>1</julian>
						</length>
					</lengths>
				</cycle>
				<cycle xml:id="Year Month">
					<list>
						<!-- January -->
						<lengths>
							<length>
								<julian>31</julian>
							</length>
						</lengths>
						<!-- February -->
						<lengths>
							<length>
								<julian ref="Year" mod="400">29</julian>
								<julian ref="Year" mod="100">28</julian>
								<julian ref="Year" mod="4">29</julian>
								<julian>28</julian>
							</length>
						</lengths>
						<!-- March -->
						<lengths>
							<length>
								<julian>31</julian>
							</length>
						</lengths>
						<!-- April -->
						<lengths>
							<length>
								<julian>30</julian>
							</length>
						</lengths>
						<!-- May -->
						<lengths>
							<length>
								<julian>31</julian>
							</length>
						</lengths>
						<!-- June -->
						<lengths>
							<length>
								<julian>30</julian>
							</length>
						</lengths>
						<!-- July -->
						<lengths>
							<length>
								<julian>31</julian>
							</length>
						</lengths>
						<!-- August -->
						<lengths>
							<length>
								<julian>31</julian>
							</length>
						</lengths>
						<!-- September -->
						<lengths>
							<length>
								<julian>30</julian>
							</length>
						</lengths>
						<!-- October -->
						<lengths>
							<length>
								<julian>31</julian>
							</length>
						</lengths>
						<!-- November -->
						<lengths>
							<length>
								<julian>30</julian>
							</length>
						</lengths>
						<!-- December -->
						<lengths>
							<length>
								<julian>31</julian>
							</length>
						</lengths>
					</list>

					<cycles>					
						<cycle xml:id="Month Day">
							<lengths>
								<length>
									<julian>1</julian>
								</length>
							</lengths>
						</cycle>
					</cycles>
				</cycle>
			</cycles>
		</cycle>
	</cycles>

	<!--
		While the calendar doesn't use these values directly, they are used with
		cultures. They are kept in the same file because typically the canonical
		name of a month or period of time won't change from culture to culture,
		or they will but we still need a baseline.
		
		This also defines the well-known formatting of the calendar.
	-->
	<lookups>
		<lookup xml:id="Short">
			<!-- The ID is assumed to be zero-based starting with the first. -->
			<name>Jan</name>
			<name>Feb</name>
			<name>Mar</name>
			<name>Apr</name>
			<name>May</name>
			<name>Jun</name>
			<name>Jul</name>
			<name>Aug</name>
			<name>Sep</name>
			<name>Oct</name>
			<name>Nov</name>
			<name>Dec</name>
		</lookup>

		<lookup xml:id="Long">
			<name>January</name>
			<name>February</name>
			<name>March</name>
			<name>April</name>
			<name>May</name>
			<name>June</name>
			<name>July</name>
			<name>August</name>
			<name>September</name>
			<name>October</name>
			<name>November</name>
			<name>December</name>
		</lookup>
	</lookups>
</calendar>
